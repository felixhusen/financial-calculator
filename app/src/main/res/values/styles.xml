<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="BCCurrencyEditText" parent="@android:style/Widget.EditText">
        <item name="android:background">@drawable/bg_edittext_currency</item>
        <item name="android:layout_marginBottom">@dimen/text_vertical_margin</item>
        <item name="android:layout_height">45dip</item>
        <item name="android:hint">0</item>
        <item name="android:drawableLeft">@drawable/bg_dollars</item>
        <item name="android:drawablePadding">@dimen/edit_text_padding</item>
        <item name="android:inputType">numberDecimal</item>
        <item name="android:paddingRight">@dimen/edit_text_padding</item>
        <item name="android:textSize">@dimen/edit_text_font_size</item>
        <item name="android:textColor">@color/text_color</item>
    </style>

    <style name="BCPercentEditText" parent="@android:style/Widget.EditText">
        <item name="android:background">@drawable/bg_edittext_currency</item>
        <item name="android:layout_marginBottom">@dimen/text_vertical_margin</item>
        <item name="android:layout_height">45dip</item>
        <item name="android:hint">%</item>
        <item name="android:drawableRight">@drawable/bg_percentage</item>
        <item name="android:drawablePadding">@dimen/edit_text_padding</item>
        <item name="android:inputType">numberDecimal</item>
        <item name="android:paddingLeft">@dimen/edit_text_padding</item>
        <item name="android:textSize">@dimen/edit_text_font_size</item>
        <item name="android:textColor">@color/text_color</item>
    </style>

    <style name="BCTimesEditText" parent="@android:style/Widget.EditText">
        <item name="android:background">@drawable/bg_edittext_currency</item>
        <item name="android:layout_marginBottom">@dimen/text_vertical_margin</item>
        <item name="android:layout_height">45dip</item>
        <item name="android:hint">%</item>
        <item name="android:drawableRight">@drawable/bg_time</item>
        <item name="android:drawablePadding">@dimen/edit_text_padding</item>
        <item name="android:inputType">numberDecimal</item>
        <item name="android:paddingLeft">@dimen/edit_text_padding</item>
        <item name="android:textSize">@dimen/edit_text_font_size</item>
        <item name="android:textColor">@color/text_color</item>
    </style>

    <style name="BCYearsEditText" parent="@android:style/Widget.EditText">
        <item name="android:background">@drawable/bg_edittext_currency</item>
        <item name="android:layout_marginBottom">@dimen/text_vertical_margin</item>
        <item name="android:layout_height">45dip</item>
        <item name="android:hint">%</item>
        <item name="android:drawableRight">@drawable/bg_years</item>
        <item name="android:drawablePadding">@dimen/edit_text_padding</item>
        <item name="android:inputType">numberDecimal</item>
        <item name="android:paddingLeft">@dimen/edit_text_padding</item>
        <item name="android:textSize">@dimen/edit_text_font_size</item>
        <item name="android:textColor">@color/text_color</item>
    </style>

    <style name="BCTextViewPrimary" parent="@android:style/Widget.TextView">
        <item name="android:layout_marginBottom">@dimen/text_vertical_margin</item>
        <item name="android:fontFamily">sans-serif-condensed</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">@dimen/text2</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="BCTextViewSecondary" parent="@android:style/Widget.TextView">
        <item name="android:layout_marginBottom">@dimen/text_vertical_margin</item>
        <item name="android:fontFamily">sans-serif-condensed</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">@dimen/text3</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="BCTextViewCopyright" parent="@android:style/Widget.TextView">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/text3</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>

    </style>

    <style name="BCBigTextViewCurrency" parent="@android:style/Widget.TextView">
        <item name="android:fontFamily">@font/american_typewriter_normal</item>
        <item name="android:text">$320.28</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/text1</item>
        <item name="android:layout_marginBottom">@dimen/text_vertical_margin</item>
    </style>

    <style name="BCSmallTextViewCurrency" parent="@android:style/Widget.TextView">
        <item name="android:layout_marginBottom">@dimen/text_vertical_margin</item>
        <item name="android:fontFamily">@font/american_typewriter_normal</item>
        <item name="android:text">$40,000.00</item>
        <item name="android:textColor">@color/text_color</item>
        <item name="android:textSize">@dimen/text2</item>
    </style>

    <style name="BCButton" parent="@android:style/Widget.Button">
        <item name="android:background">@drawable/bg_calculate_button</item>
        <item name="android:text">@string/calculate_button</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:layout_marginBottom">@dimen/text_vertical_margin</item>
        <item name="android:textSize">@dimen/text3</item>
        <item name="android:textStyle">bold</item>
    </style>

</resources>
