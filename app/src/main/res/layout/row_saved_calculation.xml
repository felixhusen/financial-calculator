<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/parent_layout"
    >
    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_saved_calculation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardCornerRadius="4dp"
        android:layout_marginLeft="@dimen/row_margin_vertical"
        android:layout_marginRight="@dimen/row_margin_vertical"
        android:layout_marginBottom="@dimen/row_margin_vertical"

        android:elevation="10dp">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/card_padding_vertical"
            android:paddingBottom="@dimen/card_padding_vertical"
            android:paddingRight="@dimen/card_padding_horizontal"
            android:paddingLeft="@dimen/card_padding_horizontal">
            <TextView
                android:id="@+id/sc_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/card_view_text3"
                android:fontFamily="sans-serif"
                android:textStyle="bold"
                android:textColor="@color/card_view_text3"
                android:layout_marginBottom="@dimen/text_vertical_margin"
                android:text="FINANCIAL PLAN 1"/>
            <TextView
                android:id="@+id/sc_result"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/card_view_text1"
                android:fontFamily="@font/american_typewriter_normal"
                android:textColor="@color/card_view_text1"
                android:layout_marginBottom="@dimen/text_vertical_margin"
                android:text="$30000"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/sc_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-light"
                    android:textSize="@dimen/card_view_text3"
                    android:layout_alignParentLeft="true"
                    android:textStyle="bold"
                    android:textColor="@color/card_view_text4"
                    android:text="Compound Interest"/>
                <TextView
                    android:id="@+id/sc_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-condensed"
                    android:textSize="@dimen/card_view_text3"
                    android:text="1 July 2018"
                    android:layout_alignParentRight="true"
                    android:textColor="@color/card_view_text4"
                    android:textStyle="bold"
                    android:textAlignment="gravity"/>
            </RelativeLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>
