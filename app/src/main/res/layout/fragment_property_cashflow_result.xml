<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:textAlignment="center"
                    android:padding="@dimen/card_padding_vertical">

                    <TextView style="@style/BCTextViewSecondary"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textStyle="normal"
                        android:layout_marginTop="@dimen/text_vertical_margin"
                        android:text="Property Cashflow Result"
                        android:gravity="center"/>

                    <TextView style="@style/BCBigTextViewCurrency"
                        android:id="@+id/pcr_cashflow_result"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="20dp"/>

                    <com.savvyapps.togglebuttonlayout.ToggleButtonLayout
                        android:id="@+id/pcr_cashflow_result_toggle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginRight="@dimen/text_vertical_margin"
                        android:layout_marginLeft="@dimen/text_vertical_margin"
                        android:layout_marginBottom="@dimen/text_vertical_margin"
                        app:customLayout="@layout/toggle_result_pc"
                        app:toggleMode="even"
                        app:allowDeselection="false"
                        app:menu="@menu/pc_result_toggle"
                        app:selectedColor="?attr/colorPrimary" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/background_color"
                    android:visibility="visible" />

                <TextView style="@style/BCTextViewPrimary"
                    android:text="Property Deal Snapshot"
                    android:textAlignment="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/row_margin_vertical"
                    android:layout_marginLeft="@dimen/row_margin_vertical"
                    android:layout_marginRight="@dimen/row_margin_vertical"
                    android:layout_marginBottom="0dp"/>

                <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/row_margin_vertical"
                    card_view:cardCornerRadius="4dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="@dimen/card_padding_vertical">

                        <TextView style="@style/BCTextViewSecondary"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Gross Property Yield" />

                        <TextView style="@style/BCSmallTextViewCurrency"
                            android:id="@+id/pcr_gross_pyield"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="4.51%"/>

                        <TextView style="@style/BCTextViewSecondary"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Property Price" />

                        <TextView style="@style/BCSmallTextViewCurrency"
                            android:id="@+id/pcr_property_price"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="$450,000.00"/>

                        <TextView style="@style/BCTextViewSecondary"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Property Deposit" />

                        <TextView style="@style/BCSmallTextViewCurrency"
                            android:id="@+id/pcr_property_deposit"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="$90,000.00"/>

                        <TextView style="@style/BCTextViewSecondary"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Rent Per Week" />

                        <TextView style="@style/BCSmallTextViewCurrency"
                            android:id="@+id/pcr_rent_per_week"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="$390.00"/>

                        <TextView style="@style/BCTextViewSecondary"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Mortgage Interest Rate" />

                        <TextView style="@style/BCSmallTextViewCurrency"
                            android:id="@+id/pcr_mortgage_interest_rate"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="4.20%"/>
                    </LinearLayout>
                </android.support.v7.widget.CardView>

                <TextView style="@style/BCTextViewPrimary"
                    android:text="Property Expenses"
                    android:textAlignment="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/row_margin_vertical"
                    android:layout_marginRight="@dimen/row_margin_vertical"
                    android:layout_marginBottom="0dp"/>

                <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/row_margin_vertical"
                    card_view:cardCornerRadius="4dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="@dimen/card_padding_vertical">

                        <TextView style="@style/BCTextViewSecondary"
                            android:id="@+id/pcr_water_rate_text"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Quaterly Water Rate" />

                        <TextView style="@style/BCSmallTextViewCurrency"
                            android:id="@+id/pcr_water_rate"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="$149.00"/>

                        <TextView style="@style/BCTextViewSecondary"
                            android:id="@+id/pcr_council_fee_text"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Quaterly Council Fee" />

                        <TextView style="@style/BCSmallTextViewCurrency"
                            android:id="@+id/pcr_council_fee"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="$384.00"/>

                        <TextView style="@style/BCTextViewSecondary"
                            android:id="@+id/pcr_additional_fee_text"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Quaterly Additional Expenses (Strata, Levy, etc.)" />

                        <TextView style="@style/BCSmallTextViewCurrency"
                            android:id="@+id/pcr_additional_fee"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="$0.00"/>

                        <TextView style="@style/BCTextViewSecondary"
                            android:id="@+id/pcr_land_tax_text"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Quaterly Land Tax" />

                        <TextView style="@style/BCSmallTextViewCurrency"
                            android:id="@+id/pcr_land_tax"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="$0.00"/>

                        <TextView style="@style/BCTextViewSecondary"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Annual Landlord Building Insurance" />

                        <TextView style="@style/BCSmallTextViewCurrency"
                            android:id="@+id/pcr_annual_li"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="$700.00"/>

                        <TextView style="@style/BCTextViewSecondary"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Annual Property Management Fees" />

                        <TextView style="@style/BCSmallTextViewCurrency"
                            android:id="@+id/pcr_annual_building_fee"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="$100.00"/>
                    </LinearLayout>
                </android.support.v7.widget.CardView>

                <Button
                    android:id="@+id/pcr_calculation_save_button"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_calculate_button"
                    android:text="Save"
                    android:textAllCaps="false"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/text3"
                    android:layout_margin="@dimen/row_margin_vertical"
                    android:textStyle="bold"
                    android:layout_marginBottom="@dimen/text_vertical_margin"/>

                <!--<Button-->
                <!--android:id="@+id/calculation_result_share_button"-->
                <!--style="@style/Widget.AppCompat.Button.Borderless"-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:background="@drawable/bg_calculate_button"-->
                <!--android:text="Share"-->
                <!--android:textAllCaps="false"-->
                <!--android:textColor="@android:color/white"-->
                <!--android:textSize="@dimen/text3"-->
                <!--android:layout_marginRight="@dimen/row_margin_vertical"-->
                <!--android:layout_marginBottom="@dimen/row_margin_vertical"-->
                <!--android:layout_marginLeft="@dimen/row_margin_vertical"-->
                <!--android:textStyle="bold" />-->
            </LinearLayout>

        </LinearLayout>
    </ScrollView>


</RelativeLayout>