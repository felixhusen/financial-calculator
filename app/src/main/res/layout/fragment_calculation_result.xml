<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/result1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/colorPrimary"
                    android:orientation="vertical"
                    android:padding="@dimen/card_padding_vertical">

                    <TextView
                        android:id="@+id/result1_desc"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif-condensed"
                        android:text="Future Value:"
                        android:textAllCaps="true"
                        android:textColor="@android:color/white"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/result1_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/american_typewriter_normal"
                        android:gravity="right"
                        android:text="$40,000.00"
                        android:textColor="@android:color/white"
                        android:textSize="@dimen/text1" />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/result2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/colorPrimary"
                    android:orientation="vertical"
                    android:padding="@dimen/card_padding_vertical">

                    <TextView
                        android:id="@+id/result2_desc"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif-condensed"
                        android:text="Future Value:"
                        android:textAllCaps="true"
                        android:textColor="@android:color/white"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/result2_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/american_typewriter_normal"
                        android:gravity="right"
                        android:text="$40,000.00"
                        android:textColor="@android:color/white"
                        android:textSize="@dimen/text1" />
                </LinearLayout>

                <TextView
                    android:text="@string/result_view"
                    android:textAlignment="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/row_margin_vertical"
                    android:layout_marginLeft="@dimen/row_margin_vertical"
                    android:layout_marginRight="@dimen/row_margin_vertical"
                    android:textStyle="bold"
                    android:textAllCaps="true"
                    android:fontFamily="sans-serif-condensed"
                    android:textSize="@dimen/text2"/>

                <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/row_margin_vertical"
                    card_view:cardCornerRadius="4dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="@dimen/card_padding_vertical">

                        <TextView
                            android:id="@+id/text1_desc"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/text_vertical_margin"
                            android:text="Current Principal:"
                            android:textAllCaps="true"
                            android:textSize="@dimen/text3"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/text1_text"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/text_vertical_margin"
                            android:fontFamily="@font/american_typewriter_normal"
                            android:text="$40,000.00"
                            android:textColor="@color/text_color"
                            android:textSize="@dimen/text2" />

                        <TextView
                            android:id="@+id/text2_desc"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/text_vertical_margin"
                            android:text="Annual Addition:"
                            android:textAllCaps="true"
                            android:textSize="@dimen/text3"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/text2_text"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/text_vertical_margin"
                            android:fontFamily="@font/american_typewriter_normal"
                            android:text="$40,000.00"
                            android:textColor="@color/text_color"
                            android:textSize="@dimen/text2" />

                        <TextView
                            android:id="@+id/text3_desc"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/text_vertical_margin"
                            android:text="Years to Grow:"
                            android:textAllCaps="true"
                            android:textSize="@dimen/text3"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/text3_text"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/text_vertical_margin"
                            android:fontFamily="@font/american_typewriter_normal"
                            android:text="5 Years"
                            android:textColor="@color/text_color"
                            android:textSize="@dimen/text2" />

                        <TextView
                            android:id="@+id/text4_desc"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/text_vertical_margin"
                            android:text="Interest Rate:"
                            android:textAllCaps="true"
                            android:textSize="@dimen/text3"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/text4_text"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/text_vertical_margin"
                            android:fontFamily="@font/american_typewriter_normal"
                            android:text="5%"
                            android:textColor="@color/text_color"
                            android:textSize="@dimen/text2" />

                        <TextView
                            android:id="@+id/text5_desc"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/text_vertical_margin"
                            android:text="Interest Time:"
                            android:textAllCaps="true"
                            android:textSize="@dimen/text3"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/text5_text"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/text_vertical_margin"
                            android:fontFamily="@font/american_typewriter_normal"
                            android:text="20 times in a year"
                            android:textColor="@color/text_color"
                            android:textSize="@dimen/text2" />

                        <TextView
                            android:id="@+id/text6_desc"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/text_vertical_margin"
                            android:text="Addition At:"
                            android:textAllCaps="true"
                            android:textSize="@dimen/text3"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/text6_text"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/text_vertical_margin"
                            android:fontFamily="@font/american_typewriter_normal"
                            android:text="Beginning of each year"
                            android:textColor="@color/text_color"
                            android:textSize="@dimen/text2" />
                        <TextView
                            android:id="@+id/text7_desc"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/text_vertical_margin"
                            android:text="Addition At:"
                            android:textAllCaps="true"
                            android:textSize="@dimen/text3"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/text7_text"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/text_vertical_margin"
                            android:fontFamily="@font/american_typewriter_normal"
                            android:text="Beginning of each year"
                            android:textColor="@color/text_color"
                            android:textSize="@dimen/text2" />
                    </LinearLayout>
                </android.support.v7.widget.CardView>

                <TextView
                    android:text="@string/table_view"
                    android:textAlignment="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/row_margin_vertical"
                    android:layout_marginLeft="@dimen/row_margin_vertical"
                    android:layout_marginRight="@dimen/row_margin_vertical"
                    android:textStyle="bold"
                    android:textAllCaps="true"
                    android:fontFamily="sans-serif-condensed"
                    android:textSize="@dimen/text2"/>


                <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/row_margin_vertical"
                    android:layout_marginLeft="@dimen/row_margin_vertical"
                    card_view:cardCornerRadius="4dp">
                    <TableLayout
                        android:id="@+id/annuity_table"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:stretchColumns="*">

                        <TableRow
                            android:layout_height="wrap_content"
                            android:layout_width="match_parent">
                            <TextView
                                android:padding="@dimen/table_row_padding"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@color/colorPrimary"
                                android:textColor="@android:color/white"
                                android:gravity="center"
                                android:textStyle="bold"
                                android:text="Years"/>
                            <TextView
                                android:padding="@dimen/table_row_padding"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@color/colorPrimary"
                                android:textColor="@android:color/white"
                                android:gravity="center"
                                android:textStyle="bold"
                                android:text="Result"/>
                        </TableRow>
                    </TableLayout>
                </android.support.v7.widget.CardView>

                <TextView
                    android:text="@string/diagram_view"
                    android:textAlignment="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/row_margin_vertical"
                    android:layout_marginLeft="@dimen/row_margin_vertical"
                    android:layout_marginRight="@dimen/row_margin_vertical"
                    android:textStyle="bold"
                    android:textAllCaps="true"
                    android:fontFamily="sans-serif-condensed"
                    android:textSize="@dimen/text2"/>

                <com.github.mikephil.charting.charts.BarChart
                    android:id="@+id/chart_result"
                    android:layout_marginTop="@dimen/row_margin_vertical"
                    android:layout_marginRight="@dimen/row_margin_vertical"
                    android:layout_marginLeft="@dimen/row_margin_vertical"
                    android:layout_width="match_parent"
                    android:layout_height="350dp" />

                <Button
                    android:id="@+id/calculation_result_save_button"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_calculate_button"
                    android:text="Save"
                    android:textAllCaps="false"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/text3"
                    android:layout_margin="@dimen/row_margin_vertical"
                    android:textStyle="bold" />

                <!--<Button-->
                <!--android:id="@+id/calculation_result_share_button"-->
                <!--style="@style/Widget.AppCompat.Button.Borderless"-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:background="@drawable/bg_calculate_button"-->
                <!--android:text="Share"-->
                <!--android:textAllCaps="false"-->
                <!--android:textColor="@android:color/white"-->
                <!--android:textSize="@dimen/text3"-->
                <!--android:layout_marginRight="@dimen/row_margin_vertical"-->
                <!--android:layout_marginBottom="@dimen/row_margin_vertical"-->
                <!--android:layout_marginLeft="@dimen/row_margin_vertical"-->
                <!--android:textStyle="bold" />-->
            </LinearLayout>

        </LinearLayout>
    </ScrollView>


</RelativeLayout>